<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/lyricaback"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:padding="16dp">

    <!-- Container for Welcome Text -->
    <LinearLayout
        android:layout_width="422dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <!-- Welcome Text Part 1 ("Welcome To") -->

        <!-- Welcome Text Part 2 ("Lyrica") -->
        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:width="500px"
            android:gravity="start"
            android:text="Welcome"
            android:textColor="@android:color/white"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcomeMessageTO"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="10dp"
            android:gravity="end"
            android:text="To"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcomeMessageLyrica"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="-60dp"
            android:layout_marginLeft="140dp"
            android:gravity="end"
            android:text="Lyrica"
            android:textColor="#FB8231"
            android:textSize="45sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Social Media Icons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebookIcon"

            android:layout_width="28dp"
            android:layout_height="27dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/facebook_icon">

        </ImageView>

        <ImageView
            android:id="@+id/xIcon"
            android:layout_width="21dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:src="@drawable/twitter_icon">

        </ImageView>


        <ImageView
            android:id="@+id/instagramIcon"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/instagram_icon">

        </ImageView>
    </LinearLayout>

    <!-- Container for Buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="Login"
            android:textColor="@android:color/white"
            android:background="@drawable/button_orange"
            android:padding="16dp" />

        <!-- Signup Button -->
        <Button
            android:id="@+id/signupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:textColor="#FB8231"
            android:background="@drawable/button_white"
            android:padding="16dp" />
    </LinearLayout>
    <Button
        android:id="@+id/openVocalRemoverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Vocal Remover"
        android:layout_below="@id/buttonContainer"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />


</LinearLayout>
